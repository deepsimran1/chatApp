<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello</title>
</head>
<body>
  <div class="container mt-5">
    <form method="POST" action="/edit/<%= user.userId %>" enctype="multipart/form-data" id="editForm">
        <% if (user.image) { %>
            <img id="userImage" src="/<%= user.image %>" alt="<%= user.image %>" style="max-width: 100px; max-height: 100px; margin-bottom: 10px;">
          <% } %>
          <br/>
      <!-- Input field to upload a new image -->
      <label class="form-label">Upload New Image</label>
      <input type="file" class="form-control" name="image" onchange="displayNewImage(this)">      
        <label class="form-label">User Id</label>
        <input type="text" class="form-control" name="userId" value="<%= user.userId %>" required>
      <label class="form-label">User Name</label>
      <input type="text" class="form-control" name="userName" value="<%= user.userName %>" required>
      
<button class="btn btn-primary mt-2" type="submit">Save</button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script>
    function displayNewImage(input){
        const userImage = document.getElementById('userImage');
        const newImage = URL.createObjectURL(input.files[0]);
        userImage.src = newImage;
    }
  </script>
</body>
</html>
